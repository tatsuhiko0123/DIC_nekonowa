<h1>投稿一覧</h1>
<div class="index_area">
  <% @posts.each do |post| %>
    <div class="index_post">
      <%= image_tag post.image.to_s, :size =>'200x200' %>
      <p class="index_comment"><%= link_to post.comment, post_path(post.id) %></p>
    </div>
  <% end %><br>

</div><br><br>
<div class="index_btn">
  <div><%= paginate @posts %></div>
  <button type="button" class="btn btn-outline-dark"><%= link_to "投稿する", new_post_path %></button>
  <button type="button" class="btn btn-outline-dark"><%= link_to "プロフィール", user_path(current_user.id) %></button>
</div>

