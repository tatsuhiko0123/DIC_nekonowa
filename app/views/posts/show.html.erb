<div class="post_area"><h2>ブログ詳細画面</h2></div>

<div class="post_container">
  <p><%= image_tag @post.image.url , size: "250x250" %></p>

  <div>
    <span class="post_show_field">
      <% unless @post.user_id == current_user.id %>
        <% if @favorite.present? %>
          <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
        <% else %>
          <%= link_to 'お気に入りする', favorites_path(post_id: @post.id), method: :post, class: 'btn btn-primary' %>
        <% end %>
      <% end %>
    </span>
    <button type="button" class="btn btn-outline-dark"><%= link_to "投稿を編集する", edit_post_path(@post.id) %></button>
    <button type="button" class="btn btn-outline-dark"><%= link_to '投稿を削除する', post_path(@post.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></button>
  </div>
</div><br>

<div class="post_area">
  <p>
    投稿者: <%= link_to "#{@post.user.name}", user_path(@post.user) %>
    <button type="button" class="btn btn-outline-dark"><%= link_to 'この投稿者にメッセージ', conversations_path(sender_id: current_user.id, recipient_id: @post.user.id), method: :post %></button>
  </p>
  <h3 class="heading03">基本情報</h3>
  <table class="post_text_area">
    <th>紹介文</th>
    <td><%= @post.comment %></td>
  </table><br>

  <table class="post_text">
    <tr>
      <th>　　種類　　</th>
      <td><%= @post.breed %></td>
      <th>　　性別　　</th>
      <td><%= @post.gender %></td>
    </tr>
    <tr>
      <th>　推定年齢　</th>
      <td><%= @post.breed %></td>
      <th>　 エリア 　</th>
      <td><%= @post.prefecture %></td>
    </tr>
  </table><br><br>

  <h3 class="heading03">詳細情報</h3>
  <button type="button" class="btn btn-outline-dark"><%= link_to '詳細情報を追加する', edit_other_post_path(post_id: @post.id) %></button><br><br>

  <table class="post_text">
    <tr>
      <th>ワクチン接種</th>
      <td><%= @post.breed %></td>
      <th> 去勢／避妊 </th>
      <td><%= @post.gender %></td>
    </tr>
    <tr>
      <th> 単身者応募 </th>
      <td><%= @post.breed %></td>
      <th> 高齢者応募 </th>
      <td><%= @post.prefecture %></td>
    </tr>
  </table><br>

  <table class="post_text_area">
    <th>健康状態</th>
    <td><%= @post.comment %></td>
  </table><br>
  <table class="post_text_area">
    <th>性格／特徴</th>
    <td><%= @post.comment %></td>
  </table><br>
  <table class="post_text_area">
    <th>引き渡し条件</th>
    <td><%= @post.comment %></td>
  </table><br>
  <table class="post_text_area">
    <th>備考</th>
    <td><%= @post.comment %></td>
  </table><br>

  <button type="button" class="btn btn-outline-dark"><%= link_to '投稿一覧画面に戻る', posts_path %></button>
</div>





