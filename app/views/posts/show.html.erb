<div class="post_area"><h2>猫のステータス</h2></div>

<div class="post_container">
  <p><%= image_tag @post.image.url , size: "250x250" %></p>

  <div>
    <span class="post_show_field">
      <% unless @post.user_id == current_user.id %>
        <% if @favorite.present? %>
          <%= link_to '気になる一覧から削除', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
        <% else %>
          <%= link_to '気になる一覧に登録', favorites_path(post_id: @post.id), method: :post, class: 'btn btn-primary' %>
        <% end %>
      <% end %>
    </span>

    <% if @post.user == current_user %>
      <button type="button" class="btn btn-outline-dark">
        <%= link_to "投稿を編集する", edit_post_path(@post.id) %>
      </button>
      <button type="button" class="btn btn-outline-dark">
        <%= link_to '投稿を削除する', post_path(@post.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %>
      </button>
    <% end %>
  </div>
</div><br>

<div class="post_area">
  <p>
    投稿者: <%= link_to "#{@post.user.name}", user_path(@post.user) %>
    <button type="button" class="btn btn-outline-dark">
      <%= link_to 'この投稿者にメッセージ', conversations_path(sender_id: current_user.id, recipient_id: @post.user.id), method: :post %>
    </button>
  </p>
  <h3 class="heading03">基本情報</h3>
  <table class="post_text_area">
    <th>紹介文</th>
    <td><%= @post.comment %></td>
  </table><br>

  <table class="post_text">
    <tr>
      <th>　　種類　　</th>
      <td><%= @post.breed %></td>
      <th>　　性別　　</th>
      <td><%= @post.gender %></td>
    </tr>
    <tr>
      <th>　推定年齢　</th>
      <td><%= @post.breed %></td>
      <th>　 エリア 　</th>
      <td><%= @post.prefecture %></td>
    </tr>
  </table><br><br>

  <h3 class="heading03">詳細情報</h3>
  <% if @post.user == current_user %>
    <% if @other_post.blank? %>
      <button type="button" class="btn btn-outline-dark">
        <%= link_to '詳細情報を追加する', new_post_other_post_path(@post) %>
      </button><br><br>
    <% else %>
      <button type="button" class="btn btn-outline-dark">
        <%= link_to '詳細情報を編集する', edit_post_other_post_path(@post, @other_post) %>
      </button><br><br>
    <% end %>
  <% end %>

  <% if @other_post.present? %>
    <table class="post_text">
      <tr>
        <th>ワクチン接種</th>
        <td><%= @other_post.vaccination %></td>
        <th> 去勢／避妊 </th>
        <td><%= @other_post.operation %></td>
      </tr>
      <tr>
        <th> 単身者応募 </th>
        <td><%= @other_post.single %></td>
        <th> 高齢者応募 </th>
        <td><%= @other_post.old_age %></td>
      </tr>
    </table><br>

    <table class="post_text_area">
      <th>健康状態</th>
      <td><%= @other_post.health_status %></td>
    </table><br>

    <table class="post_text_area">
      <th>性格／特徴</th>
      <td><%= @other_post.character %></td>
    </table><br>

    <table class="post_text_area">
      <th>引き渡し条件</th>
      <td><%= @other_post.surrender %></td>
    </table><br>

    <table class="post_text_area">
      <th>備考</th>
      <td><%= @other_post.note %></td>
    </table><br>

    <% else %> 
  <% end %>
  <br>
  <hr>
  <% if @post.address.present? %>
    <h5>保護した場所：<%= @post.address %></h5>

    <div id="map" style='width: 100%; height: 300px;'></div>
  
    <script type="text/javascript">
      handler = Gmaps.build('Google');
      handler.buildMap({ provider: { scrollwheel: false }, internal: {id: 'map'}}, function(){
        markers = handler.addMarkers([
          {
            "lat": <%= @post.latitude %>,
            "lng": <%= @post.longitude %>,
        "infowindow": '<p><%= @post.address %></p><p><%= link_to "Googleマップで見る" ,"https://maps.google.co.jp/maps?q=loc:#{@post.latitude},#{@post.longitude}&iwloc=J",target: "_blank" %></p>'
          }
        ]);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        handler.getMap().setZoom(17);
      });
    </script><br>
  <% end %>

  <button type="button" class="btn btn-outline-dark">
    <%= link_to '投稿一覧画面に戻る', posts_path %>
  </button>
</div>





