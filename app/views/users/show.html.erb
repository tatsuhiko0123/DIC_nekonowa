<div class="user_container">
  <p><%= image_tag @user.image.url if @user.image.present? %></p>
  
  <div class="user_field">
    <span class="user_text"><%= @user.name %>のページ</span>
    <% if current_user.id == @user.id %>
      <%= link_to "プロフィールを編集", edit_user_registration_path, class: "btn btn-outline-dark" %>
      <%= link_to 'メッセージ一覧', conversations_path, class: "btn btn-outline-dark" %>
    <% end %>
    <p class="box17"><%= @user.comment %></p>
  </div>
</div><br>

<h3 class="heading03">気になる一覧</h3>
<div class="user_area">
  <% @favorite.each do |post| %>
    <div class="user_post">
      <%= image_tag post.image.to_s, :size =>'150x150' %>
      <p class="user_comment"><%= link_to post.comment, post_path(post.id) %></p>
    </div>     
  <% end %><br><br>
</div><br>

<h3 class="heading03">投稿一覧</h3>
<div class="user_area">
  <% @users.each do |post| %>
    <div class="user_post">
      <%= image_tag post.image.to_s, :size =>'150x150' %>
      <p class="user_comment"><%= link_to post.comment, post_path(post.id) %></p>
    </div>     
  <% end %><br>
</div><br>

<div class="index_btn">
  <%= link_to "投稿する", new_post_path, class: "btn btn-outline-dark" %>
  <%= link_to "投稿一覧", posts_path, class: "btn btn-outline-dark" %>
</div>
