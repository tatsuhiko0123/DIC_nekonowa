<table class="table table-hover">
  <thead>
    <h3 class="heading03">メッセージ一覧</h3>
  </thead>
  <tbody>
    <% @conversations.each do |conversation| %>
      <td>
        <% if conversation.target_user(current_user).present? %>
          <%= link_to conversation.target_user(current_user).name, conversation_messages_path(conversation), class: "btn btn-outline-dark" %>
        <% end %>
      </td>
    <% end %>
  </tbody>
</table>